<%# ユーザーメッセージを追加 %>
<%= turbo_stream.append "messages" do %>
  <%= render @user_message %>
<% end %>

<%# AIメッセージを追加 %>
<%= turbo_stream.append "messages" do %>
  <%= render @ai_message %>
<% end %>

<%# フォームをリセット %>
<%= turbo_stream.replace "message-form" do %>
  <%= render "messages/form", chat_session: @chat_session, message: Message.new %>
<% end %>
