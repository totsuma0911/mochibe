<%= turbo_stream.append "messages" do %>  <!-- id="messages" の要素に新しいメッセージを追加 -->
  <%= render @message %>                  <!-- 部分テンプレート(_message.html.erb)で1件分を描画 -->
<% end %>

<%= turbo_stream.replace "message-form" do %>  <!-- id="message-form" を空のフォームに置き換え -->
  <%= render "messages/form", chat_session: @chat_session, message: Message.new %>
<% end %>
