<!-- ヘッダー部分：ハンバーガーメニューを含む既存デザインと統一したスタイル設定-->

<header class="flex items-center justify-between p-4 bg-transparent shadow-md" data-controller="menu">
  <!-- ハンバーガーメニューボタン（雲背景付き） -->
  <div class="relative">
    <!-- 雲背景 -->
    <div class="absolute -inset-2 rounded-2xl bg-gradient-to-br from-white/70 via-white/40 to-transparent backdrop-blur-md shadow-md"></div>
    <!-- ハンバーガーボタン -->
    <button data-action="click->menu#toggle" 
            data-menu-target="button"
            class="relative flex flex-col space-y-1.5 focus:outline-none hover:opacity-70 transition-opacity cursor-pointer p-2"
            aria-label="メニューを開く">
      <span class="block w-6 h-0.5 bg-gray-800 transition-all duration-300" data-menu-target="line1"></span>
      <span class="block w-6 h-0.5 bg-gray-800 transition-all duration-300" data-menu-target="line2"></span>
      <span class="block w-6 h-0.5 bg-gray-800 transition-all duration-300" data-menu-target="line3"></span>
    </button>
  </div>
  
  <!-- メニューオーバーレイ（背景クリックで閉じる） -->
  <div data-menu-target="overlay" 
       data-action="click->menu#close"
       class="fixed inset-0 bg-black/50 z-40 opacity-0 invisible transition-all duration-300">
    
    <!-- メニュー本体（左からスライドイン） -->
    <div data-menu-target="menu"
         data-action="click->menu#stopPropagation"
         class="bg-white w-80 h-full shadow-2xl transform -translate-x-full transition-transform duration-300 ease-in-out">
      
      <!-- メニューヘッダー（Mochibe.ロゴ + 閉じるボタン） -->
      <div class="flex items-center justify-between p-6 border-b border-gray-200 bg-gradient-to-r from-indigo-50 to-purple-50">
        <%= link_to root_path, 
            class: "text-2xl font-bold bg-gradient-to-r from-indigo-400 via-fuchsia-400 to-pink-500 text-transparent bg-clip-text" do %>
          Mochibe.
        <% end %>
        
        <!-- 閉じるボタン -->
        <button data-action="click->menu#close" 
                class="p-2 rounded-full hover:bg-gray-100 transition-colors"
                aria-label="メニューを閉じる">
          <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      
      <!-- メニュー項目リスト -->
      <nav class="py-4">
        
        <!-- TOPページ -->
        <%= link_to root_path, 
            class: "flex items-center px-6 py-4 text-gray-700 hover:bg-gradient-to-r hover:from-indigo-50 hover:to-purple-50 hover:text-indigo-600 transition-all duration-200",
            data: { action: "click->menu#close" } do %>
          <svg class="w-5 h-5 mr-3 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          TOPページ
        <% end %>
        
        <!-- 新規登録 -->
        <%= link_to "#", 
            class: "flex items-center px-6 py-4 text-gray-700 hover:bg-gradient-to-r hover:from-indigo-50 hover:to-purple-50 hover:text-indigo-600 transition-all duration-200",
            data: { action: "click->menu#close" } do %>
          <svg class="w-5 h-5 mr-3 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
          </svg>
          新規登録
        <% end %>
        
        <!-- マイページ -->
        <%= link_to "#", 
            class: "flex items-center px-6 py-4 text-gray-700 hover:bg-gradient-to-r hover:from-indigo-50 hover:to-purple-50 hover:text-indigo-600 transition-all duration-200",
            data: { action: "click->menu#close" } do %>
          <svg class="w-5 h-5 mr-3 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          マイページ
        <% end %>
        
        <!-- 分析を始める（CTA） -->
        <%= link_to "#", 
            class: "flex items-center px-6 py-4 text-white bg-gradient-to-r from-indigo-400 via-purple-400 to-pink-500 hover:from-indigo-500 hover:via-purple-500 hover:to-pink-600 mx-4 rounded-lg shadow-md transition-all duration-200 transform hover:scale-105",
            data: { action: "click->menu#close" } do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          分析を始める
        <% end %>
        
        <!-- 区切り線 -->
        <div class="border-t border-gray-200 my-4"></div>
        
        <!-- ポリシー項目 -->
        <%= link_to "#", 
            class: "flex items-center px-6 py-4 text-gray-700 hover:bg-gradient-to-r hover:from-indigo-50 hover:to-purple-50 hover:text-indigo-600 transition-all duration-200",
            data: { action: "click->menu#close" } do %>
          <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          ポリシー項目
        <% end %>
        
        <!-- プライバシーポリシー -->
        <%= link_to "#", 
            class: "flex items-center px-6 py-4 text-gray-700 hover:bg-gradient-to-r hover:from-indigo-50 hover:to-purple-50 hover:text-indigo-600 transition-all duration-200",
            data: { action: "click->menu#close" } do %>
          <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
          </svg>
          プライバシーポリシー
        <% end %>
        
        <!-- お問い合わせ -->
        <%= link_to "#", 
            class: "flex items-center px-6 py-4 text-gray-700 hover:bg-gradient-to-r hover:from-indigo-50 hover:to-purple-50 hover:text-indigo-600 transition-all duration-200",
            data: { action: "click->menu#close" } do %>
          <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
          お問い合わせ
        <% end %>
        
      </nav>
      
    </div>
  </div>
  
</header>