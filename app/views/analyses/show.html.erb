<% content_for :body_class, "min-h-screen bg-gradient-to-b from-sky-400 via-sky-200 to-white" %>

<div class="px-4 py-6 md:py-10">
  <div class="max-w-3xl mx-auto">

    <!-- ヘッダー -->
    <div class="text-center mb-8 animate-fade-up">
      <div class="mt-2 inline-block px-8 py-6
                  rounded-xl bg-white/70 backdrop-blur-sm shadow-sm">
        <h1 class="text-pink-500 text-2xl font-semibold tracking-wide mb-4">
          分析結果
        </h1>
        <p class="text-gray-700 text-sm md:text-base">3WHY分析が完了しました</p>
      </div>
    </div>

    <!-- 分析結果カード -->
    <div class="space-y-6">

      <!-- あなたの気持ちを受け止めて -->
      <div class="bg-white rounded-2xl shadow-lg p-6 md:p-8
                  border-l-4 border-pink-500
                  transform transition-all duration-500
                  hover:scale-105 hover:shadow-xl
                  animate-fade-up anim-delay-200">
        <h2 class="text-xl md:text-2xl font-bold mb-4
                   text-transparent bg-clip-text
                   bg-gradient-to-r from-pink-500 to-pink-600">
          💗 あなたの気持ちを受け止めて
        </h2>
        <div class="text-gray-800 leading-relaxed whitespace-pre-wrap">
          <%= simple_format(@analysis.root_cause) %>
        </div>
      </div>

      <!-- 対話から見えてきたこと -->
      <div class="bg-white rounded-2xl shadow-lg p-6 md:p-8
                  border-l-4 border-purple-500
                  transform transition-all duration-500
                  hover:scale-105 hover:shadow-xl
                  animate-fade-up anim-delay-400">
        <h2 class="text-xl md:text-2xl font-bold mb-4
                   text-transparent bg-clip-text
                   bg-gradient-to-r from-purple-500 to-purple-600">
          💡 対話から見えてきたこと
        </h2>
        <div class="text-gray-800 leading-relaxed whitespace-pre-wrap">
          <%= simple_format(@analysis.insights) %>
        </div>
      </div>

      <!-- 解決の方向性 -->
      <div class="bg-white rounded-2xl shadow-lg p-6 md:p-8
                  border-l-4 border-blue-500
                  transform transition-all duration-500
                  hover:scale-105 hover:shadow-xl
                  animate-fade-up anim-delay-600">
        <h2 class="text-xl md:text-2xl font-bold mb-4
                   text-transparent bg-clip-text
                   bg-gradient-to-r from-blue-500 to-blue-600">
          🧭 解決の方向性
        </h2>
        <div class="text-gray-800 leading-relaxed whitespace-pre-wrap">
          <%= simple_format(@analysis.summary) %>
        </div>
      </div>

      <!-- 試してみてほしいこと -->
      <div class="bg-white rounded-2xl shadow-lg p-6 md:p-8
                  border-l-4 border-green-500
                  transform transition-all duration-500
                  hover:scale-105 hover:shadow-xl
                  animate-fade-up anim-delay-800">
        <h2 class="text-xl md:text-2xl font-bold mb-4
                   text-transparent bg-clip-text
                   bg-gradient-to-r from-green-500 to-green-600">
          ✨ 試してみてほしいこと
        </h2>
        <div class="text-gray-800 leading-relaxed whitespace-pre-wrap">
          <%= simple_format(@analysis.actions) %>
        </div>
      </div>

    </div>

    <!-- ボタンエリア -->
    <div class="mt-8 flex flex-col md:flex-row gap-4 justify-center animate-fade-up anim-delay-1000">
      <%= link_to "チャットに戻る",
            chat_session_path(@chat_session),
            class: "inline-flex items-center justify-center rounded-full
                   px-6 py-3 text-base font-semibold text-white
                   bg-gradient-to-r from-purple-400 via-pink-400 to-pink-500
                   hover:from-purple-500 hover:via-pink-500 hover:to-pink-600
                   transition-all duration-200 transform
                   hover:scale-105 hover:shadow-lg
                   active:scale-95" %>

      <%= link_to "新しい分析を始める",
            root_path,
            class: "inline-flex items-center justify-center rounded-full
                   px-6 py-3 text-base font-semibold text-white
                   bg-gradient-to-r from-indigo-400 via-purple-400 to-pink-500
                   hover:from-indigo-500 hover:via-purple-500 hover:to-pink-600
                   transition-all duration-200 transform
                   hover:scale-105 hover:shadow-lg
                   active:scale-95" %>
    </div>

  </div>
</div>
