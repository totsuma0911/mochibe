#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ] || [ "${@: -2:1}" == "rails" ] && [ "${@: -1:1}" == "server" ]; then
  # Install Solid migrations if not already present
  ./bin/rails solid_queue:install:migrations 2>/dev/null || true
  ./bin/rails solid_cache:install:migrations 2>/dev/null || true
  ./bin/rails solid_cable:install:migrations 2>/dev/null || true

  # Run all migrations
  ./bin/rails db:migrate
fi

exec "${@}"
