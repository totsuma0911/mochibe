#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# If running the rails server then create or migrate existing database
if echo "$@" | grep -q "rails server"; then
  echo "Installing Solid migrations..."

  # Install Solid migrations if not already present
  ./bin/rails solid_queue:install 2>/dev/null || true
  ./bin/rails solid_cache:install 2>/dev/null || true
  ./bin/rails solid_cable:install 2>/dev/null || true

  echo "Running migrations..."
  # Run all migrations
  ./bin/rails db:migrate

  echo "Migrations complete!"
fi

exec "${@}"
